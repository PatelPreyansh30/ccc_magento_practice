<?xml version="1.0"?>
<config>
    <tabs>
        <reportmanager_tab translate="label" module="ccc_reportmanager">
            <label>Report Manager</label>
            <sort_order>1</sort_order>
        </reportmanager_tab>
    </tabs>
    <sections>
        <ccc_reportmanager>
            <label>Report Manager</label>
            <tab>reportmanager_tab</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <options translate="label">
                    <label>Reportmanager Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <reportmanager translate="label">
                            <label>Show Save Report Button</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <default>1</default>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reportmanager>
                        <usertimeout translate="label">
                            <label>Save Report User Time(in minutes)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <default>5</default>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </usertimeout>
                    </fields>
                </options>
            </groups>
        </ccc_reportmanager>
    </sections>
</config>