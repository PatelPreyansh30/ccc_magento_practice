<?xml version="1.0"?>
<config>
    <modules>
        <Ccc_Orderstock>
            <version>1.6.0.1</version>
        </Ccc_Orderstock>
    </modules>
    <adminhtml>
        <layout>
            <updates>
                <ccc_orderstock>
                    <file>ccc_orderstock.xml</file>
                </ccc_orderstock>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Ccc_Orderstock>Ccc_Orderstock_Adminhtml</Ccc_Orderstock>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <resources>
            <ccc_orderstock_setup>
                <setup>
                    <module>Ccc_Orderstock</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ccc_orderstock_setup>
        </resources>
        <blocks>
            <orderstock>
                <class>Ccc_Orderstock_Block</class>
            </orderstock>
        </blocks>
        <helpers>
            <orderstock>
                <class>Ccc_Orderstock_Helper</class>
            </orderstock>
        </helpers>
        <models>
            <orderstock>
                <class>Ccc_Orderstock_Model</class>
                <resourceModel>ccc_orderstock_resource</resourceModel>
            </orderstock>
            <ccc_orderstock_resource>
                <class>Ccc_Orderstock_Model_Resource</class>
                <entities>
                    <manufacturer>
                        <table>ccc_manufacturer</table>
                    </manufacturer>
                    <brand>
                        <table>ccc_manufacturer_brand</table>
                    </brand>
                </entities>
            </ccc_orderstock_resource>
        </models>
    </global>
</config>