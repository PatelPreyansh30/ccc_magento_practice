<?xml version="1.0"?>
<layout version="0.1.0">
	<catalog_category_default>
		<update handle='banner_master' />
	</catalog_category_default>
	<catalog_category_layered>
		<update handle='banner_master' />
	</catalog_category_layered>
	<cms_index_index>
		<update handle='banner_master' />
		<reference name="bannerslider">
			<action method="setDisplay">
				<display>0</display>
			</action>
		</reference>
	</cms_index_index>
	<banner_master>
		<reference name="content">
			<block type="bannerslider/bannerslider"
				template="bannerslider/bannerslider.phtml" before="content" name="bannerslider">
				<action method="setDisplay">
					<display>1</display>
				</action>
			</block>
		</reference>
	</banner_master>
</layout> 