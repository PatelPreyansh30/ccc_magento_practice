<?xml version="1.0"?>
<layout>
    <default>
        <reference name="head">
            <action method="addJs">
                <script>ccc/ticket/ticket.js</script>
            </action>
            <action method="addCss">
                <style>ccc/ticket/ticket.css</style>
            </action>
        </reference>
    </default>
    <adminhtml_ticket_index>
        <reference name="head">
            <action method="addJs">
                <script>ccc/ticket/grid.js</script>
            </action>
            <action method="addJs">
                <script>ccc/ticket/filter.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="ccc_ticket/adminhtml_grid" name="ticket_grid"
                template="ccc/ticket/grid.phtml">
                <block type="ccc_ticket/adminhtml_filter" name="addFilter_block"
                    template="ccc/ticket/filter.phtml" />
            </block>
        </reference>
    </adminhtml_ticket_index>
    <adminhtml_ticket_view>
        <reference name="head">
            <action method="addCss">
                <style>ccc/ticket/view.css</style>
            </action>
            <action method="addJs">
                <script>ccc/ticket/ticket.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="ccc_ticket/adminhtml_view" name="ticket_view"
                template="ccc/ticket/view.phtml">
                <block type="ccc_ticket/adminhtml_view_details" name="ticket_view_details"
                    template="ccc/ticket/view/details.phtml" />
                <block type="ccc_ticket/adminhtml_view_commentinput" name="ticket_view_commentinput"
                    template="ccc/ticket/view/commentinput.phtml" />
                <block type="ccc_ticket/adminhtml_view_comment" name="ticket_view_comment"
                    template="ccc/ticket/view/comment.phtml" />
            </block>
        </reference>
    </adminhtml_ticket_view>
</layout>