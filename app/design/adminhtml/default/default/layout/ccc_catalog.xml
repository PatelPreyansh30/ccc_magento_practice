<?xml version="1.0"?>
<layout>
    <adminhtml_sales_order_index>
        <reference name="head">
            <action method="addJs">
                <script>ccc/catalog/order_grid.js</script>
            </action>
        </reference>
        <reference name="sales_order.grid.container">
            <action method="setTemplate">
                <template>ccc/catalog/sales/order/grid.phtml</template>
            </action>
        </reference>
    </adminhtml_sales_order_index>
    <adminhtml_sales_order_view>
        <reference name="order_info">
            <action method="setTemplate">
                <template>ccc/catalog/sales/order/info.phtml</template>
            </action>
            <block name="order_delivery_note"
                type="ccc_catalog/adminhtml_sales_order_view_deliverynote"
                template="ccc/catalog/sales/order/delivery_note.phtml" />
        </reference>
    </adminhtml_sales_order_view>
    <adminhtml_sales_order_create_index>
        <reference name="billing_address">
            <action method="setTemplate">
                <template>ccc/catalog/sales/order/create.phtml</template>
            </action>
        </reference>
        <reference name="data">
            <block type="ccc_catalog/adminhtml_sales_order_create_deliverynote" name="delivery_note" template="ccc/catalog/sales/order/create/delivery_note.phtml" />
        </reference>
    </adminhtml_sales_order_create_index>
</layout>