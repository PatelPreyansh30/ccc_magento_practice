<?php
$configPath = preg_replace('!\s+!', ' ', $this->getFilemanagerConfigData());
$paths = explode(" ", $configPath);
$basePath = Mage::getBaseUrl() . 'admin/filemanager/grid';
?>

<select name="folder_path" id="folder_path" onchange="changeFolderPath('<?php echo $basePath ?>')">
    <option value="">--- SELECT FOLDER PATH ---</option>
    <?php foreach ($paths as $path): ?>
        <?php if ($this->getRequest()->getParam('value')): ?>
            <?php $selected = $path == base64_decode($this->getRequest()->getParam('value')) ? 'selected' : '' ?>
        <?php else: ?>
            <?php $selected = ""; ?>
        <?php endif; ?>
        <option value="<?php echo $path; ?>" <?php echo $selected; ?>>
            <?php echo strtoupper($path); ?>
        </option>
    <?php endforeach; ?>
</select>

<div class="content-header">
    <table cellspacing="0">
        <tr>
            <td style="<?php echo $this->getHeaderWidth() ?>">
                <?php echo $this->getHeaderHtml() ?>
            </td>
        </tr>
    </table>
</div>
<div id="filemanager-grid">
    <?php echo $this->getGridHtml() ?>
</div>